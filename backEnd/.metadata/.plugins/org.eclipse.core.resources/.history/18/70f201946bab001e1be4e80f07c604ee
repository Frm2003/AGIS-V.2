package com.br.fatec.AGIS.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.br.fatec.AGIS.model.Usuario;

@Repository
public interface UsuarioRepository extends JpaRepository<Usuario, String> {
	
	@Query(value = "select count(tipo_entidade) from Usuario where tipo_entidade = 'P'", nativeQuery = true)
	long countProfessor();
	
	@Query(value = "select * from Usuario where tipo_entidade = 'P'", nativeQuery = true)
	List<Usuario> selectAllProfessores();
}
