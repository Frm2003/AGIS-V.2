package com.br.fatec.AGIS;
import java.io.IOException;

import jakarta.servlet.Filter;
import jakarta.servlet.FilterChain;
import jakarta.servlet.FilterConfig;
import jakarta.servlet.ServletException;
import jakarta.servlet.ServletRequest;
import jakarta.servlet.ServletResponse;

public class CorsFilter implements Filter {
    @Override
    public void doFilter(ServletRequest request, ServletResponse response, FilterChain chain)
            throws IOException, ServletException {
        // Adiciona cabeçalhos CORS
        response.addHeader("Access-Control-Allow-Origin", "*"); // Ou substitua '*' pela origem específica que você deseja permitir
        response.addHeader("Access-Control-Allow-Methods", "GET, POST, PUT, DELETE");
        response.addHeader("Access-Control-Allow-Headers", "Content-Type");

        // Continua a cadeia de filtros
        chain.doFilter(request, response);
    }

    @Override
    public void init(FilterConfig filterConfig) throws ServletException {
        // Método de inicialização (pode ser deixado em branco)
    }

    @Override
    public void destroy() {
        // Método de destruição (pode ser deixado em branco)
    }
}